<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drew.graffiti" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SendMessageActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ScanCodeActivity"
            android:label="@string/title_activity_scan_code" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserLoginActivity"
            android:label="@string/title_activity_user_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MessageBoardActivity"
            android:label="@string/title_activity_message_board"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="Map"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
