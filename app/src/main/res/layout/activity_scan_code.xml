<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/BudLightTheme"
    android:background="@color/BL_light_blue"
    tools:context="com.example.drew.graffiti.ScanCodeActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scan_code_button"
        android:background="@null"
        android:src="@drawable/logo"
        android:layout_marginTop="192dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="false" />

    <TextView android:text="Scan your bottle!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scan_code_button"
        android:textSize="23sp"
        android:textColor="@color/BL_white"/>
